    <bean class="com.zaxxer.hikari.HikariDataSource"  id="dataSource">
        <property name="driverClassName" value="com.mysql.jdbc.Driver"/>    <!-- value은 문자열 데이터 값을 설정할 때 사용 -->
        <property name="jdbcUrl" value="jdbc:mysql://database.cpmkaio4y6nw.ap-northeast-2.rds.amazonaws.com:3306/playground"/>
        <property name="username" value="admin"/>
        <property name="password" value="1q2w3e4r"/>
    </bean>

    <bean class="org.springframework.jdbc.core.JdbcTemplate" id="jdbcTemplate">
        <property name="dataSource" ref="dataSource"/>  <!-- ref은 문자열 객체 값을 설정할 때 사용 -->
    </bean>





</beans>